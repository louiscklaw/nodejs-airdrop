<style>
  .container-title {
    display:flex;
    flex-direction: row;
    justify-content: center;

    color: rgba(0,0,0,0.5);
  }


</style>

<script>
    
  function handleDeleteButtonClick(e) {
    console.log(e);
  }

</script>

<div class="container" >
  <div class="upload-box">

    <div class="container-title" >
      <h2>file upload / 檔案上傳</h2>
    </div>

    <form class="upload-form-container" action="upload" method="post" encType="multipart/form-data">
      <input class="upload-button" type="submit" value="upload" hidden />

      <div style="margin-top: 3rem;">
        <input type="file" id="file-input" name="supercoolfile" multiple />
        <label for="file-input">
          <i class="fa-regular fa-folder-open"></i>
          <i class="fa-solid fa-memo"></i>


          <i class="fa-solid fa-magnifying-glass"></i>

          &nbsp; Choose Files To Upload
        </label>
        <div id="num-of-files">No Files Choosen</div>
        <ul id="files-list">
          <li>
            <div class="left">
              <p class="icon"><i class="fa-regular fa-file fa-2x"></i> </p>
              <p class="name">helloworld</p>
            </div>

            <div class="right" >
              <p class="size">1234KB</p>
              <p class="delete-container">
                <button type="button" class="delete-button" id="file-${idx}" onClick="handleDeleteButtonClick(this, 1)">
                  <i class="fa-solid fa-trash-can fa-2x"></i>
                </button>
              </p>
            </div>

            </li>
          <li><p>helloworld_helloworld_helloworld_helloworld_helloworld_helloworld_helloworld_helloworld_</p><p>1234KB</p></li>

        </ul>

      </div>

      
      <div style="
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      ">
        <div class="button-container">
            <div id="btn-back" class="button-label">
              <i class="fa-solid fa-chevron-left"></i>
              back
              </div>
          
            <div id="btn-upload" class="button-label">
              <i class="fa-solid fa-arrow-up-from-bracket"></i>
              upload
              </div>
        </div>
      </div>
      
    </form>

    <div id="debug"></div>
  </div>
</div>

<!-- Script -->
<script src="script.js"></script>
